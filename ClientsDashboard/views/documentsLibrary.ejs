                        <div class="form-group">
                            <label for="requestId"><i class="fas fa-tag"></i> This is for:</label>
                            <select name="requestId" id="requestId" required>
                                <% uploadRequests.forEach(request => { %>
                                <option value="<%= request.requestId %>"><%= request.description || request.documentType %></option>
                                <% }); %>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="description"><i class="fas fa-align-left"></i> Notes (optional):</label>
                            <textarea name="description" id="description" placeholder="Add any notes about this document..."></textarea>
                        </div>

                        <button type="submit" class="btn-upload">
                            <i class="fas fa-upload"></i> Upload Document
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <% } %>

        <!-- ============================================================= -->
        <!-- DOCUMENTS BY CATEGORY (Read-Only View) -->
        <!-- ============================================================= -->
        <% if (hasFiles) { %>
            <% Object.keys(categoryDefs).forEach(catKey => {
                const catDocs = files.filter(d => d.category === catKey);
                if (catDocs.length > 0) { %>
        <div class="category-section">
            <div class="category-header">
                <div class="category-icon <%= catKey %>"><%- categoryDefs[catKey].icon %></div>
                <div class="category-info">
                    <div class="category-name"><%= categoryDefs[catKey].name %></div>
                    <div class="category-count"><%= catDocs.length %> document(s)</div>
                </div>
            </div>
            <% catDocs.forEach(doc => { %>
            <div class="document-row">
                <div class="doc-type-badge"><%= getFileExt(doc.fileName) %></div>
                <div class="doc-details">
                    <div class="doc-title"><%= doc.fileName %></div>
                    <% if (doc.description) { %>
                    <div class="doc-description">"<%= doc.description %>"</div>
                    <% } %>
                    <div class="doc-info"><%= formatFileSize(doc.fileSize) %> &bull; <%= doc.uploadedAt ? new Date(doc.uploadedAt).toLocaleDateString('en-GB') : 'N/A' %></div>
                </div>
                <% if (doc.category === 'consent') { %>
                <button
                    hx-get="/consent/viewModal"
                    hx-target="#consentModalContainer"
                    hx-swap="innerHTML"
                    class="doc-action">
                    <i class="fas fa-eye"></i> View
                </button>
                <% } else if (doc.viewUrl) { %>
                <a href="<%= doc.viewUrl %>" target="_blank" class="doc-action">
                    <i class="fas fa-eye"></i> View
                </a>
                <% } %>
            </div>
            <% }); %>
        </div>
            <% }
            }); %>
        <% } else { %>
        <!-- Empty State -->
        <div class="empty-state">
            <i class="fas fa-folder-open"></i>
            <h3>No Documents Yet</h3>
            <p>Once you sign your consent form and complete your INA appointment, your documents will appear here.</p>
        </div>
        <% } %>

    </div>

    <!-- Modal Footer -->
    <div class="modal-footer">
        <a href="/clientsDashboard?clientPin=<%= client.clientPin %>" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Return to Dashboard
        </a>
    </div>

</div><!-- End modal-container -->
<% } %><!-- End else consentSigned -->

<!-- HTMX Modal Container -->
<div id="consentModalContainer"></div>
</body>
</html>
