// ============================================================
// EJS HELPERS (Server-Side Only)
// ============================================================
const getInitials = (name) => {
    if (!name || name === 'Client') return 'CL';
    return name.split(' ').map(n => n[0]).join('').toUpperCase().substring(0, 2);
};

// Category definitions (client-focused)
const categoryDefs = {
    consent: { icon: '&#x1F4DD;', name: 'Consent Forms' },
    medical: { icon: '&#x1F4CB;', name: 'Medical Records' },
    reports: { icon: '&#x1F4CA;', name: 'INA Reports & Assessments' },
    legal: { icon: '&#x2696;&#xFE0F;', name: 'Legal Documents' },
    photos: { icon: '&#x1F4F8;', name: 'Photos' },
    custom: { icon: '&#x2795;', name: 'Other Documents' }
};

// Calculate category counts
const categoryCounts = {
    consent: 0, medical: 0, reports: 0, legal: 0, photos: 0, custom: 0
};

const files = typeof documentsLibraryFiles !== 'undefined' ? documentsLibraryFiles : [];
const fileCount = typeof documentsLibraryFileCount !== 'undefined' ? documentsLibraryFileCount : 0;
const uploadRequests = typeof pendingUploadRequests !== 'undefined' ? pendingUploadRequests : [];
const hasUploadRequests = uploadRequests && uploadRequests.length > 0;

if (Array.isArray(files)) {
    files.forEach(doc => {
        const cat = doc.category || 'custom';
        if (categoryCounts.hasOwnProperty(cat)) categoryCounts[cat]++;
    });
}

const hasFiles = files && files.length > 0;

// File extension helper
const getFileExt = (fileName) => {
    if (!fileName) return 'DOC';
    return fileName.split('.').pop().toUpperCase();
};

// File size helper
const formatFileSize = (bytes) => {
    if (!bytes) return 'N/A';
    if (bytes < 1024) return bytes + ' B';
    if (bytes < 1024 * 1024) return (bytes / 1024).toFixed(1) + ' KB';
    return (bytes / (1024 * 1024)).toFixed(2) + ' MB';
};
%>

